{
  "$schema": "../node_modules/@tauri-apps/cli/config.schema.json",
  "productName": "Lingo Vault",
  "version": "0.1.11",
  "identifier": "com.kozmosa.lingovault",
  "build": {
    "frontendDist": "../dist",
    "devUrl": "http://localhost:5173",
    "beforeDevCommand": "npm run dev",
    "beforeBuildCommand": "npm run build"
  },
  "app": {
    "windows": [
      {
        "title": "Lingo Vault",
        "width": 800,
        "height": 600,
        "resizable": true,
        "fullscreen": false
      }
    ],
    "security": {
      "csp": null
    }
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ]
  },
  "plugins": {
    "updater": {
      "endpoints": [
        "https://github.com/Kozmosa/LingoVault/releases/latest/download/latest.json"
      ],
      "pubkey": "YOUR_PUBLIC_KEY_HERE"
    },
    "http": {
      "scope": [
        "https://github.com/*",
        "https://api.github.com/*",
        "https://objects.githubusercontent.com/*",
        "https://cdn.jsdelivr.net/*",
        "https://gh-proxy.com/*",
        "https://fastgit.cc/*",
        "https://s3.amazonaws.com/*"
      ]
    }
  }
}